package aulas;

public class PrimeiroExercicio {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
		int numero1 = 13;
		int numero2 = 10;
		
		System.out.println("Número 1:" + " " + numero1);
		System.out.println("Número 2:" + " " + numero2);
		
		String nome = "Calvinho";
		int idade = 1;
		Double dinheiro = 49.99;
		boolean verdadeiro = true;
		boolean falso = false;
		
		System.out.println("--------------------------------------------");
		System.out.println("Nome " + nome + " tem " + idade + " ano de idade," + "\n" + "e tem de dinheiro R$" + dinheiro + "\n" + "de bife de carne no minecraft.");
		System.out.println("É "+verdadeiro+" esse bilhete.");
		System.out.println("Ele é uma ser real."+ "É "+falso+" esse bilhete");
	}

}
