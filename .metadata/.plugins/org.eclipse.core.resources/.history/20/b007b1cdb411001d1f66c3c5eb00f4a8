package aulas;

public class PrimeiroExercicio {
	
	/*Atividade aula de algoritmo*/

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
		int numero1 = 13;
		int numero2 = 10;
		
		System.out.println("Número 1:" + " " + numero1);
		System.out.println("Número 2:" + " " + numero2);
		
		String nome = "Calvinho";
		char sexo = 'M';
		int idade = 1;
		Double dinheiro = 49.99;
		boolean verdadeiro = true;
		boolean falso = false;
		
		System.out.println("--------------------------------------------");
		System.out.println("Nome " + nome + " tem " + idade + " ano de idade," + "\n" + "e tem de dinheiro R$" + dinheiro + "\n" + "de bife de carne no minecraft.");
		System.out.println("É " + verdadeiro + " esse bilhete.");
		System.out.println("--------------------------------------------");
		System.out.println("Informações:");
		System.out.println("Nome: " + nome);
		System.out.println("Sexo: " + sexo);
		System.out.println("Idade: " + idade);
		System.out.println("É " + falso + " esse bilhete.");
		
	}

}
